include /components/ui/Btn/Btn
include /components/ui/Outer/Outer
include FormItem/FormItem

mixin FormSection({ title, formList, btn })
  - const B = 'form-section';

  +Outer(B, B, 'section')
    h1(class=`${B}__title`) #{ title }

    form(class=`${B}__form`)
      each form in formList
        +FormItem(form)(class=`${B}__form-item`)
      div(class=`${B}__form-item ${B}__form-item--btn`)
        +Btn(btn)(class=`${B}__btn`)

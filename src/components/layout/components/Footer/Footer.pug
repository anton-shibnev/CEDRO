include /components/ui/Outer/Outer
include /components/layout/components/DataRow/DataRow
include ./FooterSoc/FooterSoc
include ../Logo/Logo

mixin Footer({ colList, socList, copyright, madeBy, fear })
  - const B = 'footer';
  
  +Outer(B, B, 'footer')
    +DataRow(colList)(class=`${B}__row ${B}__row--first`)

    hr(class=`${B}__line`)

    div(class=`${B}__row ${B}__row--center`)
      div(class=`${B}__col`)
        +FooterSoc(socList)(class=`${B}__soc-list`)

      div(class=`${B}__col`)
        a(class=`${B}__copyright` href='#') #{ copyright }

      div(class=`${B}__col ${B}__col--end`)
        a(class=`${B}__made-by` href='#')
          span(class=`${B}__made-by-label`) #{ madeBy.label }
          +Icon(madeBy.icon)(class=`${B}__made-by-icon`)

    hr(class=`${B}__line`)

    div(class=`${B}__row`)
      p(class=`${B}__fear`) #{ fear }
